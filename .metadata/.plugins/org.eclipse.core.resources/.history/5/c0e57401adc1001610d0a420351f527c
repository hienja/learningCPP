#include "Person.h"
#include <sstream>

Person::Person() {
	// TODO Auto-generated constructor stub
	name = "";
	age = 0;
}

Person::Person(string name, int age): name(name) {

}

string Person::toString() {
	stringstream ss;

	ss << "Person name is: ";
	ss << name;
	ss << "; Person age is: ";
	ss << age;

	return ss.str();
}

