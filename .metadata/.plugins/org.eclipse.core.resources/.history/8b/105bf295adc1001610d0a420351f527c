#include "Person.h"
#include <sstream>

Person::Person(): name("unnamed"), age(0) {
	// TODO Auto-generated constructor stub

}

Person::Person(string name, int age): name(name), age(age) {

}

string Person::toString() {
	stringstream ss;

	ss << "Person name is: ";
	ss << name;
	ss << "; Person age is: ";
	ss << age;

	return ss.str();
}

