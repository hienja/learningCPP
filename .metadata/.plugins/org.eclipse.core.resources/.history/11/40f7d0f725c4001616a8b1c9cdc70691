#include <iostream>
using namespace std;

//.h header file
class Test{
private:
	int id;
	static int count;
public:
	//Initialization must be done here
	static int const MAX = 99;
public:
	Test() {
		id = ++count;
	}
	public int getId() {
		return id;
	}
	static void showInfo() {
		cout << count << endl;
	}
};

//.cpp sourc
int Test::count = 0;

int main() {
	cout << Test::MAX << endl;
	Test::showInfo();

	Test test1;
	Test test2;
	test1.showInfo();
	test2.showInfo();
	cout << test1.getId() << endl;
	cout << test2.getId() << endl;
	return 0;
}
