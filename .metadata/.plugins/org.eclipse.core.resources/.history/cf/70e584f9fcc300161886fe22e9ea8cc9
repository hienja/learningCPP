#include <iostream>
using namespace std;

void showOne(const int nElements, string texts[]) {
	//cout << sizeof(texts) << endl;

	for(int i = 0; i < nElements; i++) {
		cout << texts[i] << endl;
	}
}

int main() {
	string texts[] = {"apple", "orange", "banana"};
	cout << sizeof(texts) << endl;
	showOne(3, texts);
	return 0;
}
