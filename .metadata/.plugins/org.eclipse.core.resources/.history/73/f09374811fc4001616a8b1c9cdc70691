#include <iostream>
using namespace std;

class Machine {
private:
	int id;
public:
	Machine(): id(0) {cout << "Machine no-argument constructor called" << endl;}
	void info() {cout << "ID" << id << endl; }
};

class Vehicle: public Machine {
public:
	Vehicle() {cout << "Vehicle no-argument constructor called" << endl;}
};

int main() {
	Machine machine;

	Vehicle vehicle;

	return 0;
}
