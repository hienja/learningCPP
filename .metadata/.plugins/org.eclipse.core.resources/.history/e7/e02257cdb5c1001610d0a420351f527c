#include <iostream>
using namespace std;

int main() {
	string texts[] = {"one", "two", "three"};
	string *ptexts = texts;

	for(int i = 0; i < sizeof(texts)/sizeof(string); i++) {
		cout << ptexts[i] << " " << flush;
	}

	cout << endl;

	for(int i = 0; i < sizeof(texts)/sizeof(string); i++) {
		cout << *ptexts << " " << flush;
		ptexts++;
	}

	cout << endl;
	cout << texts << endl;

	string *pElement = &texts[0];
	string *pEnd = &texts[2];

	while(true){
		cout << *pElement << flush;

		if(pElement == pEnd)

		pElement++;
	}

	cout <<

	return 0;
}
